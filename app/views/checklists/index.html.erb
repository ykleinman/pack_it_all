<div class="page-header">
  <h1>
    Checklists
    <a href="/checklists/new" class="btn btn-lg btn-success">New Checklist</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Trip</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @checklists.each do |checklist| %>
      <tr>
        <td><%= checklist.trip.location %></td>
        <td><%= checklist.name %></td>
        <td>
          <a href="/checklists/<%= checklist.id %>" class="btn btn-primary">Show</a>
          <a href="/checklists/<%= checklist.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_checklist/<%= checklist.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
