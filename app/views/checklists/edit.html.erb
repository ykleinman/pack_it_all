<!-- Validation failure messages -->
<% if @checklist.errors.any? %>
  <% @checklist.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Checklist #<%= @checklist.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_checklist/<%= @checklist.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for trip_id -->
      <div class="form-group">
        <label for="trip_id" class="control-label">
          Trip
        </label>

        <%= select_tag(:trip_id, options_from_collection_for_select(Trip.all, :id, :location, @checklist.trip_id), :class => "form-control") %>
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @checklist.name %>">
      </div>

      <button class="btn btn-warning">
        Update Checklist
      </button>
      or
      <a href="/checklists/<%= @checklist.id %>">Cancel</a>
    </form>
  </div>
</div>
