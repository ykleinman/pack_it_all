<div class="page-header">
  <h1>
    Trips
    <a href="/trips/new" class="btn btn-lg btn-success">New Trip</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "trips_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :location_cont, "Location contains" %>
    <%= f.text_field :location_cont, :class => "form-control", :placeholder => "Location contains" %>
  </div>

<div class="form-group">
          <%= f.label :dates, "Dates" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='datesgteqPicker'>
                  <%= f.text_field :dates_gteq, :class => "form-control", :placeholder => "Dates greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='dateslteqPicker'>
                  <%= f.text_field :dates_lteq, :class => "form-control", :placeholder => "Dates less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#datesgteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#dateslteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#datesgteqPicker').on("dp.change", function (e) {
                  $('#dateslteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#dateslteqPicker').on("dp.change", function (e) {
                  $('#datesgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_username_cont, "User username contains" %>
      <%= f.text_field :user_username_cont, :class => "form-control", :placeholder => "User username contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "Checklist Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='checklistgteqcreated_atPicker'>
                  <%= f.text_field :checklist_created_at_gteq, :class => "form-control", :placeholder => "Checklist Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='checklistlteqcreated_atPicker'>
                  <%= f.text_field :checklist_created_at_lteq, :class => "form-control", :placeholder => "Checklist Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#checklistgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#checklistlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#checklistgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#checklistlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#checklistlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#checklistgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/trips" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#trips_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Location</th>
        <th>User</th>
        <th>Dates</th>
        <th>Actions</th>
      </tr>

      <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.location %></td>
        <td>
          <% if trip.user.present? %>
            <a href="/users/<%= trip.user.id %>">
              <%= trip.user.username %>
            </a>
          <% end %>
        </td>
        <td><%= trip.dates %></td>
        <td>
          <a href="/trips/<%= trip.id %>" class="btn btn-primary">Show</a>
          <a href="/trips/<%= trip.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_trip/<%= trip.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @trips, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
